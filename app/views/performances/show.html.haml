- cache performance do
  .title.row
    .large-12.columns
      %h1
        = link_to performance.artist.name, performance.artist
        at
        = link_to performance.episode.name, performance.episode
  .row
    .large-8.columns
      .player.row
        .large-12.columns
          - if performance.video?
            = youtube_player performance.youtube_id
          - elsif performance.audio?
            = cloudcast_player performance.cloudcast_key
      .description.row
        .large-12.columns
          = simple_format performance.artist.description
    .links.large-4.columns
      %nav
        %section
          - if performance.video?
            = link_to performance.youtube_url, class: 'alert button' do
              = icon :youtube
              = t '.youtube'
          - if performance.audio?
            = link_to performance.mixcloud_url, class: 'button' do
              = icon :headphones
              = t '.mixcloud'
          - if performance.downloadable?
            = link_to performance.audio_url, class: 'secondary button' do
              = icon :speaker
              = t '.audio'
