- cache performance do
  .images.row
    .large-12.columns
      = image_tag performance.cover_image, alt: performance.title
  .title.row
    .large-12.columns
      %h1
        = link_to performance.artist.name, performance.artist
        at
        = link_to performance.episode.name, performance.episode
  .description.row
    .large-8.columns
      = simple_format performance.artist.description
    .links.large-4.columns
      %nav
        %section
          - if performance.youtube_url.present?
            = link_to performance.youtube_url, class: 'alert button' do
              = icon :youtube
              = t '.youtube'
          - if performance.mixcloud_url.present?
            = link_to performance.mixcloud_url, class: 'button' do
              = icon :headphones
              = t '.mixcloud'
          - if performance.downloadable?
            = link_to performance.audio, class: 'secondary button' do
              = icon :speaker
              = t '.audio'
