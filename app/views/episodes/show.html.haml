- content_for :metadata do
  - if @episode.archived?
    %meta{ property: 'og:video', content: @episode.video }
    %meta{ property: 'og:video:height', content: 640 }
    %meta{ property: 'og:video:width', content: 385 }
    %meta{ property: 'og:video:type', content: 'application/x-mpegURL' }
    %link{ rel: 'video_src', href: @episode.video }
    %meta{ name: 'medium', content: 'video' }

- self.title = @episode.title
- cache @episode do
  - cache [@episode, :title] do
    = render 'title', episode_title: @episode.title
  .row
    - cache [@episode, :info] do
      .large-8.columns
        .video.row
          .large-12.columns
            - if @episode.streaming?
              = youtube_stream src: @episode.stream_url, autoplay: @episode.autoplay
            - elsif @episode.archived?
              %video{ class: 'video-js vjs-sublime-skin', id: 'archive', controls: 'controls', preload: 'auto', width: 640, poster: @episode.flyer_file }
                %source{ src: @episode.video, type: 'application/x-mpegURL' }
              = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/video.js/5.11.0/alt/video.novtt.min.js'
              = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/video.js/5.11.0/video.min.js'
              = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/videojs-contrib-hls/3.3.0/videojs-contrib-hls.min.js'
              :javascript
                videojs('archive');
            - else
              = @episode.flyer
        .info.row
          .name.row
            .large-12.columns
              %h3= @episode.title
              %br
          .description.row
            .large-8.columns
              = simple_format @episode.description
    - cache [@episode, :sidebar] do
      .large-4.columns
        .buttons.row
          .large-12.columns
            .actions
              %ul{ style: 'list-style-type: none' }
                - if @episode.audio?
                  %li.audio
                    = link_to @episode.audio, class: 'secondary button' do
                      = icon :music
                      &nbsp;
                      = t :audio, scope: :episodes
                - if @episode.show_ticket_link?
                  %li.eventbrite
                    = link_to @episode.eventbrite_url, class: 'success button', target: '_blank' do
                      = icon :ticket
                      &nbsp;
                      = t :tickets, scope: :episodes
                - if @episode.show_facebook_event?
                  %li.facebook
                    = link_to @episode.facebook_url, class: 'button', target: '_blank' do
                      = icon :facebook
                      &nbsp;
                      = t :share, scope: :episodes
        .collection.artists.row
          .large-12.columns
            %h2= t :lineup, scope: :episodes
            %ul
              - @episode.artists.each do |artist|
                %li.row
                  = link_to artist, title: artist.name do
                    .large-4.columns
                      = attachment_image_tag artist, :image_file
                    .large-8.columns
                      %h5= artist.name
