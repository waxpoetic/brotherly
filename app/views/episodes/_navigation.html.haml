%ul{ style: 'list-style-type: none' }
  - if episode.has_audio?
    %li.audio
      = link_to episode.audio_url, class: 'tiny secondary button' do
        = t :audio, scope: :episodes
  - if episode.has_video?
    %li.video
      = link_to episode.video_url, class: 'tiny secondary button' do
        = t :video, scope: :episodes
  - if episode.show_ticket_link?
    %li.eventbrite
      = link_to episode.eventbrite_url, class: 'tiny success button', target: '_blank' do
        = t :tickets, scope: :episodes
  - if episode.show_facebook_event?
    %li.facebook
      = link_to episode.facebook_url, class: 'tiny button', target: '_blank' do
        = t :share, scope: :episodes
  - if episode.show_mixcloud_link?
    %li.mixcloud
      = link_to episode.mixcloud_url, class: 'tiny info button', target: '_blank' do
        = t :mixcloud, scope: :episodes
